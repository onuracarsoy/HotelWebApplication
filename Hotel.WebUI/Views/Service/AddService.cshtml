@model AddServiceDto
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="card-title">
    <h4>Hizmet Ekle</h4>
</div>
<form method="post">
    <label>Hizmet Başlığı</label>
    <input type="text" asp-for="Title" class="form-control input-rounded" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />

    <label>Hizmet İkon</label>
    <input type="text" asp-for="ServiceIcon" class="form-control input-rounded" />
    <span asp-validation-for="ServiceIcon" class="text-danger"></span>
    <br />

    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control input-rounded" />
  
    <br />

    <button class="btn mb-1 btn-rounded btn-success ">Ekle</button>
</form>



