@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="card-title">
    <h4>Hizmet Güncelle</h4>
</div>
<form method="post">
    <input type="hidden" asp-for="ServiceID" />

    <label>Hizmet Başlığı</label>
    <input type="text" asp-for="Title" class="form-control input-rounded" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />

    <label>Hizmet İkon</label>
    <input type="text" asp-for="ServiceIcon" class="form-control input-rounded" />
    <span asp-validation-for="ServiceIcon" class="text-danger"></span>
    <br />

    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control input-rounded" />
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />


    <button class="btn mb-1 btn-rounded btn-success ">Güncelle</button>
</form>


