@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="card-title">
    <h4>Hakkmızda Güncelle</h4>
</div>
<form method="post">
    <input type="hidden" asp-for="AboutID" />

    <label>Hakkımızda Başlık 1</label>
    <input type="text" asp-for="Title1" class="form-control input-rounded" />
    <span asp-validation-for="Title1" class="text-danger"></span>
    <br />

    <label>Hakkımızda Başlık 2</label>
    <input type="text" asp-for="Title2" class="form-control input-rounded" />
    <span asp-validation-for="Title2" class="text-danger"></span>
    <br />

    <label>İçerik</label>
    <textarea asp-for="Content" class="form-control input-rounded" ></textarea>
    <span asp-validation-for="Content" class="text-danger"></span>
    <br />

    <label>Oda Sayısı</label>
    <input type="text" asp-for="RoomCount" class="form-control input-rounded" />
    <span asp-validation-for="RoomCount" class="text-danger"></span>
    <br />

    <label>Personel Sayısı</label>
    <input type="text" asp-for="StaffCount" class="form-control input-rounded" />
    <span asp-validation-for="StaffCount" class="text-danger"></span>
    <br />

    <label>Müşteri Sayısı</label>
    <input type="text" asp-for="CustomerCount" class="form-control input-rounded" />
    <span asp-validation-for="CustomerCount" class="text-danger"></span>
    <br />


    <button class="btn mb-1 btn-rounded btn-success ">Güncelle</button>
</form>


