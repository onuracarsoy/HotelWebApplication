@model List<Hotel.EntityLayer.Concrete.AppRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<div class="card-body">
<div class="card-title">
    <h4>Roller</h4>
</div>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Rol Adı</th>
       
                <th>Sil</th>
                <th>Güncelle</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>

                    <td><a href="/Role/DeleteRole/@item.Id" class="btn mb-1 btn-rounded btn-danger">Sil</a></td>
                    <td><a href="/Role/UpdateRole/@item.Id" class="btn mb-1 btn-rounded btn-warning">Güncelle</a></td>

                </tr>
            }

        </tbody>
    </table>
</div>
</div>


<a href="/Role/AddRole/" class="btn mb-1 btn-rounded btn-primary"> Yeni Rol Ekle</a>



