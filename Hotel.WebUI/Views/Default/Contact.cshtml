@model AddContactDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_HeadPartial")

<body>
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        @await Component.InvokeAsync("_SpinnerPartial")
        <!-- Spinner End -->
        <!-- Header Start -->
        @await Component.InvokeAsync("_NavbarPartial")
        <!-- Header End -->
        <!-- Contact Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                    <h6 class="section-title text-center text-primary text-uppercase">Bize Ulaş</h6>
                    <h1 class="mb-5">Aklında <span class="text-primary text-uppercase">Soru</span> Kalmasın</h1>
                </div>
                <div class="row g-4">

                    <div class="col-md-6 wow fadeIn" data-wow-delay="0.1s">
                        <iframe class="position-relative rounded w-100 h-100"
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d13719.67275310921!2d27.479435035719586!3d40.50344294210409!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14b42302dc4b132b%3A0x398f36c2f821d66d!2zQXbFn2EsIE1hcm1hcmEvQmFsxLFrZXNpcg!5e0!3m2!1str!2str!4v1688832214121!5m2!1str!2str"
                                frameborder="0" style="min-height: 350px; border:0;" allowfullscreen="" aria-hidden="false"
                                tabindex="0"></iframe>
                    </div>
                    <div class="col-md-6">
                        <div class="wow fadeInUp" data-wow-delay="0.2s">
                            <form method="post" asp-action="Contact" asp-controller="Default">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control" asp-for="Name" placeholder="Ad Soyad">
                                            <label for="name">Ad Soyad</label>
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="email" class="form-control" asp-for="Mail" placeholder="Mail">
                                            <label for="email">Mail</label>
                                            <span asp-validation-for="Mail" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating">

                                            <select class="form-select" asp-for="Subject">

                                                <option value="Teşekkür">Teşekkür</option>
                                                <option value="Şikayet">Şikayet</option>
                                                <option value="Öneri">Öneri</option>
                                                <option value="Talep">Talep</option>
                                                <option value="Diğer">Diğer</option>
                                            </select>
                                            <label for="select1">Konu</label>


                                            <span asp-validation-for="Subject" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating">
                                            <textarea class="form-control" placeholder="Mesaj" asp-for="Message" style="height: 150px"></textarea>
                                            <label for="message">Mesaj</label>
                                            <span asp-validation-for="Message" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <button class="btn btn-primary w-100 py-3" type="submit">Gönder</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Contact End -->
        <!-- Team Start -->
        <!-- Team End -->
        <!-- Newsletter Start -->
        @await Html.PartialAsync("_SubscribePartial.cshtml")
        <!-- Newsletter Start -->
        <!-- Footer Start -->
        @await Component.InvokeAsync("_FooterPartial")
        <!-- Footer End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    @await Component.InvokeAsync("_ScriptPartial")
</body>

</html>

