@model AddBookingDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_HeadPartial")

<body>
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        @await Component.InvokeAsync("_SpinnerPartial")
        <!-- Spinner End -->
        <!-- Header Start -->
        @await Component.InvokeAsync("_NavbarPartial")
        <!-- Header End -->
        <!-- Carousel Start -->

        <!-- Carousel End -->
        <!-- Booking Start -->

        <div class="container-xxl py-5">
            <div class="container">
                <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                    <h6 class="section-title text-center text-primary text-uppercase">Rezervasyon</h6>
                    <h1 class="mb-5"><span class="text-primary text-uppercase">Lüx Odayı</span> Rezerve Et</h1>
                </div>
                <div class="row g-5">
                    <div class="col-lg-6">
                        <div class="row g-3">
                            <div class="col-6 text-end">
                                <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.1s" src="~/hotel-html-template/img/about-1.jpg" style="margin-top: 25%;">
                            </div>
                            <div class="col-6 text-start">
                                <img class="img-fluid rounded w-100 wow zoomIn" data-wow-delay="0.3s" src="~/hotel-html-template/img/about-2.jpg">
                            </div>
                            <div class="col-6 text-end">
                                <img class="img-fluid rounded w-50 wow zoomIn" data-wow-delay="0.5s" src="~/hotel-html-template/img/about-3.jpg">
                            </div>
                            <div class="col-6 text-start">
                                <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.7s" src="~/hotel-html-template/img/about-4.jpg">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="wow fadeInUp" data-wow-delay="0.2s">
                            <form method="post" asp-action="Booking" asp-controller="Default">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control" asp-for="Name" placeholder="Ad Soyad">
                                            <label for="name">Ad Soyad</label>
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="email" class="form-control" asp-for="Mail" placeholder="Mail">
                                            <label for="email">Mail</label>
                                            <span asp-validation-for="Mail" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating date" data-target-input="nearest">
                                            <input type="text" class="form-control datetimepicker-input" asp-for="CheckIn" placeholder="GG/AA/YYYY" data-target="#date3" data-toggle="datetimepicker" />
                                            <label for="checkin">Giriş Tarihi(GG/AA/YYYY)</label>
                                            <span asp-validation-for="CheckIn" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating date" data-target-input="nearest">
                                            <input type="text" class="form-control datetimepicker-input" asp-for="CheckOut" placeholder="GG/AA/YYYY" data-target="#date4" data-toggle="datetimepicker" />
                                            <label for="checkout">Çıkış Tarihi(GG/AA/YYYY)</label>
                                            <span asp-validation-for="CheckOut" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <select class="form-select" asp-for="AdultCount">

                                                <option value="1">1 Yetişkin</option>
                                                <option value="2">2 Yetişkin</option>
                                                <option value="3">3 Yetişkin</option>
                                            </select>
                                            <label for="select1">Yetişkin Sayısı</label>
                              
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <select class="form-select" asp-for="ChildCount">
                                                <option value="Yok">Yok</option>
                                                <option value="1">1 Çocuk</option>
                                                <option value="2">2 Çocuk</option>
                                                <option value="3">3 Çocuk</option>
                                            </select>
                                            <label for="select2">Çocuk Sayısı</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating">
                                            <select class="form-select" asp-for="RoomCount">
                                                <option value="1">1 Oda</option>
                                                <option value="2">2 Oda</option>
                                                <option value="3">3 Oda</option>
                                            </select>
                                            <label for="select3">Oda Sayısı</label>
                                         
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating">
                                            <textarea class="form-control" placeholder="Eklemek İstedikleriniz" asp-for="SpecialRequest" style="height: 100px"></textarea>
                                            <label for="message">Eklemek İstedikleriniz</label>

                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <button class="btn btn-primary w-100 py-3" type="submit">Rezervasyon Yap</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Booking End -->
        <!-- About Start -->

        <!-- About End -->
        <!-- Room Start -->

        <!-- Room End -->
        <!-- Service Start -->

        <!-- Service End -->
        <!-- Testimonial Start -->

        <!-- Testimonial End -->
        <!-- Team Start -->
   
        <!-- Team End -->
        <!-- Newsletter Start -->
        @await Html.PartialAsync("/Views/Default/_SubscribePartial.cshtml")
        <!-- Newsletter Start -->
        <!-- Footer Start -->
        @await Component.InvokeAsync("_FooterPartial")
        <!-- Footer End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    @await Component.InvokeAsync("_ScriptPartial")
</body>

</html>



