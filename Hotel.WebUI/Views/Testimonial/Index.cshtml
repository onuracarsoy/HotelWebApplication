@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="card-body">
    <div class="card-title">
        <h4>Referanslar</h4>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Referans Adı</th>
                    <th>Referans Ünvan</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                    <th>Detaylar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TestimonialID</td>
                        <td>@item.Name</td>
                        <td>@item.Title</td>
                        <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn mb-1 btn-rounded btn-danger">Sil</a></td>
                        <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn mb-1 btn-rounded btn-warning">Güncelle</a></td>
                        <td><a href="/Testimonial/DetailsTestimonial/@item.TestimonialID" class="btn mb-1 btn-rounded btn-dark">Detaylar</a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<a href="/Testimonial/AddTestimonial/" class="btn mb-1 btn-rounded btn-primary"> Yeni Referans Ekle</a>


