@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="card-body">
    <div class="card-title">
        <h4>İletişimler</h4>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>

                <tr>
                    <th>#</th>
                    <th>Ad Soyad</th>
                    <th>Konu</th>
                    <th>Sil</th>
                    <th>Cevapla</th>
                    <th>Detaylar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ContactID</td>
                        <td>@item.Name</td>
                        <td>@item.Subject</td>

                        <td><a href="/Contact/DeleteContact/@item.ContactID" class="btn mb-1 btn-rounded btn-danger">Sil</a></td>
                        <td><a href="/Contact/MailContact/@item.ContactID" class="btn mb-1 btn-rounded btn-success">Cevapla</a></td>
                        <td><a href="/Contact/DetailsContact/@item.ContactID" class="btn mb-1 btn-rounded btn-dark">Detaylar</a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>



