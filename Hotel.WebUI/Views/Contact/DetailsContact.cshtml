@model ResultContactDto
@{
    ViewData["Title"] = "DetailsContact";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">

           
          
                <div class="read-content">
                    <div class="media pt-5">

                        <div class="media-body">
                            <h5 class="m-b-3">@Model.Name</h5>
                         <p class="m-b-2"> Tarih:  @Model.Date</p>
                        </div>

                    </div>
                    <hr>
                    <div class="media mb-4 mt-1">
                        <div class="media-body">
           
                            <h4 class="m-0 text-primary">@Model.Subject</h4><small class="text-muted">Mail: @Model.Mail</small>
                        </div>
                    </div>
                    <p>
                     @Model.Message
                    </p>
                   
            </div>
        </div>
    </div>
</div>


