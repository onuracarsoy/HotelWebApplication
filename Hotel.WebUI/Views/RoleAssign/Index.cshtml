@model List<Hotel.EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="card-body">
    <div class="card-title">
        <h4>Atanmış Roller</h4>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Kullanıcı</th>
          @*          <th>Rol</th>*@
                    <th>Rol Ata</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name @item.Surname</td>
                        
                  
                   

                        <td><a href="/RoleAssign/AssignRole/@item.Id" class="btn mb-1 btn-rounded btn-success">Rol Ata</a></td>
               

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>






